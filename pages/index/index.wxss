/**index.wxss**/

.userinfo {
  display: flex;
  flex-direction: column;
  align-items: center;
}

.userinfo-avatar {
  width: 128rpx;
  height: 128rpx;
  margin: 20rpx;
  border-radius: 50%;
}

.userinfo-nickname {
  color: #aaa;
}

.usermotto {
  margin-top: 200px;
}

.modle_group {
  padding: 40rpx;
  background-color: #fff;
}

.modle_group .modle_title {
  font-size: 36rpx;
  display: flex;
  justify-content: space-between;
}

.modle_title .modle-movetitle {
  color: #494949;
}

.modle_title .more {
  color: #41be57;
}

.module_scroll {
  margin-top: 40rpx;
  width: 100%;
  height: 400rpx;
  white-space: nowrap;
}

.module_scroll .item_navigator {
  width: 200rpx;
  margin-right: 20rpx;
  display: inline-block;
}

.module_scroll .item_navigator:last-of-type {
  margin-right: 0;
}

.item_navigator .item-group {
  width: 100%;
}

.item-group .item-img {
  width: 100%;
  height: 284rpx;
}

.item-img .thumbnail-img {
  width: 100%;
  height: 100%;
}

.item-group .item-title {
  font-size: 12px;
  text-align: center;
  margin-top: 20rpx;
  text-overflow: ellipsis;
  overflow: hidden;
}
